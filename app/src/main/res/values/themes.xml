<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExerciseGo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryVariant">@color/orange_900</item>
        <item name="colorOnPrimary">@color/grey_800</item>
         Secondary brand color.
        <item name="colorSecondary">@color/grey_800</item>
        <item name="colorSecondaryVariant">@color/grey_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:buttonStyle">@style/Style.Button</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:actionBarStyle">@style/Style.Action</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExerciseGo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Style.Action" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Style.Button" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/orange_200</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="Theme.ExerciseGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExerciseGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>